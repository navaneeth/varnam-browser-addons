{
    "name": "Varnam",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Varnam is a transliteration based input system for indian languages. Varnam uses phonetic based transliteration and enables indic input on all the webpages. After installing, right click on any input field and choose the desired language from the 'Varnam' menu.",
    "homepage_url": "http://www.varnamproject.com/",
    "incognito": "split",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "24.png",
        "default_title" : "Varnam"
    },

    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": ["css/varnam.css"],
            "js": [
                "js/jquery-1.8.2.min.js",
                "js/textinputs_jquery.js",
                "js/caret.js",
                "js/varnam.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/",
        "https://*/",
        "http://www.varnamproject.com/*"
    ],
     "icons": {
          "128":"128.png",
          "48": "48.png",
          "24": "24.png",
          "19":"19.png",
          "16": "icon.png"
    },
    "web_accessible_resources": [
        "progress.gif"
    ]
}
